---
import '../styles/global.css';
import Layout from './Layout.astro';


const {frontmatter} = Astro.props;
---


		
<Layout>			
	<article class="blogpost blog--wrapper">
		<!-- Reminder to add alt tags -->
		<div class="blogpost--headline">
			<a href="/blog">Back to Blog</a>

			<h1 class="blogpost--title">{frontmatter.title}</h1>
			<p class="blogpost--description">{frontmatter.description}</p>
			
		</div>

		<div class="blogpost--content">
			<slot />
		</div>
	</article>
</Layout>

<style>

	.blog--wrapper{
		max-width: 748px;
		margin-inline:auto;
		min-height: 100vh;
	}

	.article--thumbnail{
		width:100%;
	}

	.blogpost{
		padding: var(--spacing-3xl) 0;
	}

	.blogpost--headline{
		margin-bottom: var(--spacing-xl);
	}
	.blogpost--content{
		display:flex;
		flex-direction:column;
		gap: var(--spacing-2xl);

		padding-bottom: var(--spacing-3xl);
	}

	.warn{
		color: red;
	}
</style>